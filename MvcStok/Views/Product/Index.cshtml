@using MvcStok.Models.Entity
@model IEnumerable<MvcStok.Models.Entity.TBLURUNLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>URUN ID</th>
            <th>URUN AD</th>
            <th>URUN MARKA</th>
            <th>URUN KATEGORİ</th>
            <th>URUN FİYAT</th>
            <th>URUN STOK</th>
            <th>GÜNCELLE</th>
            <th>SİL</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.ID</th>
                <td>@item.AD</td>
                <td>@item.MARKA</td>
                <td>@item.TBLKATEGORILER.AD</td>
                <td>@item.FIYAT  TL</td>
                <td>@item.STOK</td>
                <td><a class="btn btn-success" href="/Product/ProductGet/@item.ID">Güncelle</a></td>
                <td>
                    @Html.ActionLink("SİL", "Delete", new { id = item.ID },
               new { @class = "btn btn-danger", onclick = "return confirm('Gerçekten Silmek İstiyor Musunuz?')" })
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Product/NewProduct/" class="btn btn-primary">YENİ ÜRÜN EKLE</a>

<script type="text/javascript" src="https://cdn.datatables.net/2.1.4/js/dataTables.min.js"></script>
<link href="https://cdn.datatables.net/2.1.4/css/dataTables.dataTables.min.css" rel="stylesheet" />

<script>
    $('#tbl1').DataTable({
        "paging": true,
        "searching": true,
        "ordering": true
    });
</script>